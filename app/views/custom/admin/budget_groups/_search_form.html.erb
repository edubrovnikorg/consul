<% init_advanced_menu %>
<%= form_tag(import_admin_districts_path(@district), method: :post, enforce_utf8: false) do %>
  <div class="small-12 column">
    <%= link_to "#advanced_filters_content",
                data: { toggle: "advanced_filters" },
                class: "advanced-filters button hollow float-right clear" do %>
      <%= t("admin.districts.import") %>
    <% end %>
  </div>

  <div id="advanced_filters" data-toggler=".hide">
    <div class="small-12 column">
      <div class="advanced-filters-content district-import">

        <% ["kotari", "odbori"].each do |filter| %>
          <div class="filter">
            <%= check_box_tag "advanced_filters[]", filter, params[:advanced_filters].index(filter), id: "advanced_filters_#{filter}" %>
            <%= label_tag "advanced_filters[#{filter}]", t("admin.district.filter.#{filter}") %>
          </div>
        <% end %>
      <div class="small-12 medium-3 column end district-button">
        <%= submit_tag t("admin.district.filter.button"), class: "button expanded " %>
      </div>
      </div>
    </div>
  </div>




<% end %>
